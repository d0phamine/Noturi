{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:read-dirs",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$PICTURE"
        },
        {
          "path": "$PICTURE/*"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$VIDEO"
        },
        {
          "path": "$VIDEO/*"
        },
        {
          "path": "$VIDEO/**"
        },
        {
          "path": "$AUDIO"
        },
        {
          "path": "$AUDIO/*"
        },
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$PUBLIC"
        },
        {
          "path": "$PUBLIC/*"
        },
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$TEMPLATE"
        },
        {
          "path": "$TEMPLATE/*"
        },
        {
          "path": "$TEMPLATE/**"
        }
      ]
    },
    "dialog:default"
  ]
}