{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "fs:allow-read-dir",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:read-dirs",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-watch",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    }
  ]
}